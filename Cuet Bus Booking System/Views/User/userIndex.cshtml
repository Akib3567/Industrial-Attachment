@model IEnumerable<Cuet_Bus_Booking_System.Models.CuetBus>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CUET Bus Booking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background: #f8f9fb;
            color: #1a1a1a;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 22px 28px;
            font-size: 22px;
            background: white;
            border-bottom: 1px solid #e5e7eb;
        }

            .navbar .left span {
                display: block;
                font-size: 18px;
                margin-top: 6px;
                color: #555;
            }

        .nav-buttons {
            display: flex;
            gap: 12px;
            padding: 20px 12px 0 12px;
        }

        .nav-btn {
            padding: 10px 26px;
            border-radius: 8px;
            border: none;
            font-size: 18px;
            cursor: pointer;
            background: #e5e7eb;
        }

            .nav-btn.active {
                background: #2563eb;
                color: white;
            }

        .logout {
            font-size: 18px;
            cursor: pointer;
        }

        .container {
            background: white;
            padding: 26px;
            margin: 20px auto;
            max-width: 1200px;
            border-radius: 12px;
            border: 1px solid #e5e7eb;
        }

        .section-title {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        label {
            font-size: 18px;
            font-weight: 500;
            display: block;
            margin-bottom: 8px;
        }

        .select-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
            margin-bottom: 20px;
        }

        select, input[type="date"] {
            width: 100%;
            height: 56px;
            font-size: 18px;
            padding: 0 14px;
            border: 2px solid #3b82f6;
            border-radius: 8px;
        }

        .bus-card {
            display: none;
            background: #eef5ff;
            padding: 20px;
            border-radius: 12px;
            font-size: 18px;
            margin-top: 16px;
            border: 1px solid #cddfff;
        }

            .bus-card div {
                margin-bottom: 4px;
            }

        .seat-section {
            display: none;
        }

        .seat-grid {
            display: grid;
            grid-template-columns: repeat(10, 1fr);
            gap: 14px;
            margin-top: 20px;
        }

        .seat {
            padding: 18px 0;
            background: #f3f4f6;
            border-radius: 8px;
            font-size: 18px;
            text-align: center;
            cursor: pointer;
            border: 1px solid #d1d5db;
            user-select: none;
        }

            .seat:hover {
                background: #dbeafe;
                border-color: #93c5fd;
            }

            .seat.unavailable {
                background: #ffcccc;
                border-color: #ff7b7b;
                cursor: not-allowed;
            }

            .seat.selected {
                background: #2563eb;
                color: white;
                border-color: #1d4ed8;
            }

        .confirm-btn {
            width: 100%;
            margin-top: 26px;
            padding: 14px 24px;
            background: #2563eb;
            color: white;
            font-size: 20px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }

            .confirm-btn:hover {
                background: #1d4ed8;
            }

        .booking-message {
            display: none;
            margin-top: 22px;
            font-size: 20px;
            font-weight: 600;
            color: #16a34a;
        }

        .cancel-btn {
            width: 100%;
            margin-top: 16px;
            padding: 12px 24px;
            background: #ef4444;
            color: white;
            font-size: 18px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

            .cancel-btn:hover {
                background: #dc2626;
            }

        .content-section {
            display: none;
        }

            .content-section.active {
                display: block;
            }


        .seat-grid {
            grid-template-columns: repeat(5, 1fr);
        }

        }
    </style>
</head>

<body>

    <div class="navbar">
        <div class="left">
            <strong>CUET Bus Booking System</strong>
            <span>Welcome, John Doe (1801001)</span>
        </div>
        <div class="logout">Logout</div>
    </div>

    <div class="nav-buttons">
        <button class="nav-btn active" data-section="booking">Book a Seat</button>
        <button class="nav-btn" data-section="myBookings">My Bookings</button>
    </div>

    <div id="bookingSection" class="content-section active">
        <div class="container">
            <div class="section-title">Select Bus and Date</div>

            <div class="select-row">
                <div>
                    <label>Select Bus</label>
                    <select id="busSelect">
                        <option value="">Choose a bus</option>
                        @foreach (var bus in Model)
                        {
                            <option value="@bus.BusId" data-name="@bus.BusName" data-time="@bus.ScheduleTime" data-seats="@bus.TotalSeats">@bus.BusName</option>
                        }
                    </select>

                    <div id="busCard" class="bus-card"></div>
                </div>

                <div>
                    <label>Select Date</label>
                    <input type="date" id="dateSelect">
                </div>
            </div>
        </div>

        <div class="container seat-section" id="seatSection">
            <div class="section-title">Select Your Seat</div>

            <div class="seat-grid" id="seatGrid"></div>

            <button id="confirmBtn" class="confirm-btn">Confirm Booking</button>

            <div id="bookingMessage" class="booking-message"></div>

            <button id="cancelBtn" class="cancel-btn" style="display:none;">Cancel Booking</button>
        </div>
    </div>

    <div id="myBookingsSection" class="content-section">
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const navButtons = document.querySelectorAll('.nav-btn');
        const bookingSection = document.getElementById('bookingSection');
        const myBookingsSection = document.getElementById('myBookingsSection');

        navButtons.forEach(btn => {
            btn.addEventListener('click', async function () {
                navButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                const section = this.dataset.section;

                if (section === 'booking') {
                    bookingSection.classList.add('active');
                    myBookingsSection.classList.remove('active');
                } else if (section === 'myBookings') {
                    bookingSection.classList.remove('active');
                    myBookingsSection.classList.add('active');
                    await loadMyBookings();
                }
            });
        });

        async function loadMyBookings() {
            const userId = 1;
            try {
                const response = await fetch(`/User/GetMyBookings?userId=${userId}`);
                const html = await response.text();
                myBookingsSection.innerHTML = html;
            } catch (error) {
                console.error('Error loading bookings:', error);
                myBookingsSection.innerHTML = '<div class="container mt-4"><p>Error loading bookings</p></div>';
            }
        }

        const busSelect = document.getElementById("busSelect");
        const busCard = document.getElementById("busCard");
        const seatSection = document.getElementById("seatSection");
        const seatGrid = document.getElementById("seatGrid");
        const confirmBtn = document.getElementById("confirmBtn");
        const bookingMessage = document.getElementById("bookingMessage");
        const cancelBtn = document.getElementById("cancelBtn");

        let selectedSeat = null;
        let selectedBusId = null;
        let currentBookingId = null;

        busSelect.addEventListener("change", async () => {
            selectedSeat = null;
            selectedBusId = null;
            currentBookingId = null;
            bookingMessage.style.display = "none";
            cancelBtn.style.display = "none";

            const busId = busSelect.value;

            if (busId === "") {
                busCard.style.display = "none";
                seatSection.style.display = "none";
                return;
            }

            selectedBusId = parseInt(busId);
            const selectedOption = busSelect.options[busSelect.selectedIndex];
            const busName = selectedOption.dataset.name;
            const scheduleTime = selectedOption.dataset.time;
            const totalSeats = parseInt(selectedOption.dataset.seats);

            const bookedSeatsResponse = await fetch(`/User/GetBookedSeats?busId=${busId}`);
            const bookedSeats = await bookedSeatsResponse.json();
            const available = totalSeats - bookedSeats.length;

            busCard.innerHTML = `
                <div><strong>${busName}</strong></div>
                <div>${scheduleTime}</div>
                <div>Available Seats: ${available} / ${totalSeats}</div>
                <div>Booked: ${bookedSeats.length}</div>
            `;
            busCard.style.display = "block";

            renderSeats(totalSeats, bookedSeats);
            seatSection.style.display = "block";
        });

        function renderSeats(totalSeats, booked) {
            seatGrid.innerHTML = "";
            selectedSeat = null;

            for (let i = 1; i <= totalSeats; i++) {
                const seatDiv = document.createElement("div");
                seatDiv.className = "seat";
                seatDiv.textContent = i;

                if (booked.includes(i)) {
                    seatDiv.classList.add("unavailable");
                } else {
                    seatDiv.addEventListener("click", () => {
                        document.querySelectorAll(".seat").forEach(s =>
                            s.classList.remove("selected")
                        );
                        seatDiv.classList.add("selected");
                        selectedSeat = i;
                    });
                }

                seatGrid.appendChild(seatDiv);
            }
        }

        confirmBtn.addEventListener("click", async () => {
            if (!selectedSeat || !selectedBusId) {
                alert("Please select a seat");
                return;
            }

            const bookingData = {
                UserId: 1,
                BusId: selectedBusId,
                SeatNumber: selectedSeat
            };

            try {
                const response = await fetch('/User/BookSeat', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(bookingData)
                });

                const result = await response.json();

                if (response.ok) {
                    currentBookingId = result.bookingId;
                    bookingMessage.textContent = "You have booked seat no " + selectedSeat;
                    bookingMessage.style.display = "block";
                    cancelBtn.style.display = "block";
                } else {
                    alert(result.message || "Failed to book seat. Please try again.");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An error occurred while booking the seat.");
            }
        });

        cancelBtn.addEventListener("click", async () => {
            if (!currentBookingId) return;

            try {
                const response = await fetch(`/User/CancelBooking?bookingId=${currentBookingId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    alert("Booking cancelled successfully!");
                    bookingMessage.style.display = "none";
                    cancelBtn.style.display = "none";
                    document.querySelectorAll(".seat").forEach(s => s.classList.remove("selected"));
                    selectedSeat = null;
                    currentBookingId = null;
                    busSelect.dispatchEvent(new Event('change'));
                } else {
                    alert("Failed to cancel booking. Please try again.");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An error occurred while cancelling the booking.");
            }
        });
    </script>

</body>
</html>