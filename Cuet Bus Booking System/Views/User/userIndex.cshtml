@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CUET Bus Booking System</title>

    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background: #f8f9fb;
            color: #1a1a1a;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 22px 28px;
            font-size: 22px;
            background: white;
            border-bottom: 1px solid #e5e7eb;
        }

            .navbar .left span {
                display: block;
                font-size: 18px;
                margin-top: 6px;
                color: #555;
            }

        .nav-buttons {
            display: flex;
            gap: 12px;
            padding: 20px 12px 0 12px;
        }

        .nav-btn {
            padding: 10px 26px;
            border-radius: 8px;
            border: none;
            font-size: 18px;
            cursor: pointer;
            background: #e5e7eb;
        }

            .nav-btn.active {
                background: #2563eb;
                color: white;
            }

        .logout {
            font-size: 18px;
            cursor: pointer;
        }

        .container {
            background: white;
            padding: 26px;
            margin: 20px auto;
            width: 92%;
            border-radius: 12px;
            border: 1px solid #e5e7eb;
        }

        .section-title {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        label {
            font-size: 18px;
            font-weight: 500;
        }

        .row {
            display: flex;
            gap: 32px;
            align-items: flex-start;
        }

        select, input[type="date"] {
            width: 420px;
            height: 56px;
            font-size: 18px;
            padding: 0 14px;
            border: 2px solid #3b82f6;
            border-radius: 8px;
        }

        .bus-card {
            display: none;
            background: #eef5ff;
            padding: 20px;
            border-radius: 12px;
            font-size: 18px;
            margin-top: 16px;
            width: 100%;
            border: 1px solid #cddfff;
        }

            .bus-card div {
                margin-bottom: 4px;
            }

        .seat-section {
            display: none;
            margin: 26px;
        }

        .seat-grid {
            display: grid;
            grid-template-columns: repeat(10, 1fr);
            gap: 14px;
            margin-top: 20px;
        }

        .seat {
            padding: 18px 0;
            background: #f3f4f6;
            border-radius: 8px;
            font-size: 18px;
            text-align: center;
            cursor: pointer;
            border: 1px solid #d1d5db;
            user-select: none;
        }

            .seat:hover {
                background: #dbeafe;
                border-color: #93c5fd;
            }

            .seat.unavailable {
                background: #ffcccc;
                border-color: #ff7b7b;
                cursor: not-allowed;
            }

            .seat.selected {
                background: #2563eb;
                color: white;
                border-color: #1d4ed8;
            }

        .confirm-btn {
            width: 100%;
            margin-top: 26px;
            padding: 14px 24px;
            background: #2563eb;
            color: white;
            font-size: 20px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }

            .confirm-btn:hover {
                background: #1d4ed8;
            }

        .booking-message {
            display: none;
            margin-top: 22px;
            font-size: 20px;
            font-weight: 600;
        }

        .cancel-btn {
            width: 100%;
            margin-top: 16px;
            padding: 12px 24px;
            background: #ef4444;
            color: white;
            font-size: 18px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

            .cancel-btn:hover {
                background: #dc2626;
            }
    </style>
</head>

<body>

    <div class="navbar">
        <div class="left">
            <strong>CUET Bus Booking System</strong>
            <span>Welcome, John Doe (1801001)</span>
        </div>
        <div class="logout">Logout</div>
    </div>

    <div class="nav-buttons">
        <button class="nav-btn active">Book a Seat</button>
        <button class="nav-btn">My Bookings</button>
    </div>

    <div class="container">
        <div class="section-title">Select Bus and Date</div>

        <div class="row">
            <div>
                <label>Select Bus</label><br>
                <select id="busSelect">
                    <option value="">Choose a bus</option>
                    <option value="Padma">Padma</option>
                    <option value="Meghna">Meghna</option>
                    <option value="Jamuna">Jamuna</option>
                    <option value="Karnafuli">Karnafuli</option>
                </select>

                <div id="busCard" class="bus-card"></div>
            </div>

            <div>
                <label>Select Date</label><br>
                <input type="date" id="dateSelect">
            </div>
        </div>
    </div>

    <div class="container seat-section" id="seatSection">
        <div class="section-title">Select Your Seat</div>

        <div class="seat-grid" id="seatGrid"></div>

        <button id="confirmBtn" class="confirm-btn">Confirm Booking</button>

        <div id="bookingMessage" class="booking-message"></div>

        <button id="cancelBtn" class="cancel-btn" style="display:none;">Cancel Booking</button>
    </div>

    <script>
        const busData = {
            Padma: { time: "8:00 AM", route: "Campus to City", booked: [5, 8, 17] },
            Meghna: { time: "9:00 AM", route: "Campus to City", booked: [2, 20, 33] },
            Jamuna: { time: "7:30 AM", route: "City to Campus", booked: [1, 9, 10] },
            Karnafuli: { time: "10:30 AM", route: "City to Campus", booked: [14, 22, 40] }
        };

        const busSelect = document.getElementById("busSelect");
        const busCard = document.getElementById("busCard");
        const seatSection = document.getElementById("seatSection");
        const seatGrid = document.getElementById("seatGrid");

        const confirmBtn = document.getElementById("confirmBtn");
        const bookingMessage = document.getElementById("bookingMessage");
        const cancelBtn = document.getElementById("cancelBtn");

        let selectedSeat = null;

        busSelect.addEventListener("change", () => {
            selectedSeat = null;
            bookingMessage.style.display = "none";
            cancelBtn.style.display = "none";

            const bus = busSelect.value;

            if (bus === "") {
                busCard.style.display = "none";
                seatSection.style.display = "none";
                return;
            }

            const info = busData[bus];
            const available = 40 - info.booked.length;

            busCard.innerHTML = `
                <div><strong>${bus}</strong></div>
                <div>${info.time} – ${info.route}</div>
                <div>Available Seats: ${available} / 40</div>
                <div>Booked: ${info.booked.length}</div>
            `;
            busCard.style.display = "block";

            renderSeats(info.booked);
            seatSection.style.display = "block";
        });

        function renderSeats(booked) {
            seatGrid.innerHTML = "";
            selectedSeat = null;

            for (let i = 1; i <= 40; i++) {
                const seatDiv = document.createElement("div");
                seatDiv.className = "seat";
                seatDiv.textContent = i;

                if (booked.includes(i)) {
                    seatDiv.classList.add("unavailable");
                } else {
                    seatDiv.addEventListener("click", () => {
                        document.querySelectorAll(".seat").forEach(s =>
                            s.classList.remove("selected")
                        );
                        seatDiv.classList.add("selected");
                        selectedSeat = i;
                    });
                }

                seatGrid.appendChild(seatDiv);
            }
        }

        confirmBtn.addEventListener("click", () => {
            if (!selectedSeat) return;

            bookingMessage.textContent = "You have booked seat no " + selectedSeat;
            bookingMessage.style.display = "block";

            cancelBtn.style.display = "block";
        });

        cancelBtn.addEventListener("click", () => {
            bookingMessage.style.display = "none";
            cancelBtn.style.display = "none";
            document.querySelectorAll(".seat").forEach(s => s.classList.remove("selected"));
            selectedSeat = null;
        });
    </script>

</body>
</html>
