
@page
@{
    ViewBag.Title = "CUET Bus Booking System";
    var userName = "John Doe";
    var userId = "1801001";
    var busName = "Padma";
    var journeyDate = "2025-11-11";
    var seatNo = "5";
    var journeyTime = "8:00 AM";
    var journeyRoute = "Campus to City";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-light bg-white shadow-sm p-3 mb-4">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <span class="navbar-brand h3 fw-bold">CUET Bus Booking System</span>
            <a class="text-decoration-none text-muted" href="#" style="font-size:1.1rem">
                <i class="fa fa-sign-out-alt me-1"></i> Logout
            </a>
        </div>
        <div class="ps-3 text-muted small">
            Welcome, @userName (@userId)
        </div>
    </nav>

    <div class="container">
        <div class="d-flex mb-3">
            <a class="btn btn-outline-primary me-2" asp-page="/User/seatBooking" style="min-width:140px;">Book a Seat</a>
            <a class="btn btn-primary" asp-page="/User/myBooking" style="min-width:140px;">My Bookings</a>
        </div>
        <h5 class="fw-bold mb-3">My Bookings</h5>

        <div class="bg-white rounded shadow-sm p-3 mb-3">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <span class="fa fa-bus fa-lg me-2 text-primary"></span>
                    <span class="fw-bold h6 mb-0">@busName</span>
                </div>
                <div class="d-flex align-items-center">
                    <span class="me-3 text-muted">
                        <i class="fa fa-calendar-alt"></i>
                        @journeyDate
                    </span>
                    <span class="btn btn-outline-primary btn-sm px-3 fw-bold">Seat No: @seatNo</span>
                </div>
            </div>
            <div class="mt-2 ms-4 ps-2 text-muted">
                @journeyTime - @journeyRoute
            </div>
        </div>
    </div>
</body>
</html>
