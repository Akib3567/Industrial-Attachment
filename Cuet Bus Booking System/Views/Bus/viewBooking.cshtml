@{
    ViewData["Title"] = "CUET Bus Management";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-light bg-white shadow-sm px-4 py-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0 fw-bold">CUET Bus Management</h4>
                <small class="text-muted">Welcome, Admin User</small>
            </div>
            <a href="/Account/Logout" class="btn btn-outline-dark">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex mb-4">
            <a href="/Bus/Adminpage" class="btn btn-outline-secondary me-3 px-4 py-2">Manage Buses</a>
            <a href="/Bus/viewBooking" class="btn btn-primary px-4 py-2">View Bookings</a>
        </div>

        <div id="bookingListContainer"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function loadBookings() {
            try {
                const response = await fetch('/Bus/GetAllBookings');
                const html = await response.text();
                document.getElementById('bookingListContainer').innerHTML = html;
            } catch (error) {
                console.error('Error loading bookings:', error);
                document.getElementById('bookingListContainer').innerHTML = '<div class="alert alert-danger">Error loading bookings</div>';
            }
        }

        loadBookings();
    </script>
</body>
</html>